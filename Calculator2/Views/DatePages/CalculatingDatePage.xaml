<Page x:Class="Calculator2.Views.DatePages.CalculatingDatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Calculator2.Views"
      mc:Ignorable="d" 
      Height="263" 
      Width="380"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="43"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" 
               Content="Выберите нужный расчет даты:"  
               HorizontalAlignment="Left" 
               VerticalAlignment="Top"/>

        <ComboBox Margin="10,7,30,7" Grid.Row="1">
            <TextBlock Text="Вычисление интервала между двумя датами"/>
            <TextBlock Text="Добавление или вычитание дней до указанной даты"/>
        </ComboBox>

        <Grid Grid.Row="2">
            <Frame NavigationUIVisibility="Hidden" Content="{Binding Date1}"/>
        </Grid>
        
        <Button Grid.Row="3" 
                Content="Вычислить" 
                VerticalAlignment="Top"
                Margin="270,5,20,5"/>
    </Grid>
</Page>
