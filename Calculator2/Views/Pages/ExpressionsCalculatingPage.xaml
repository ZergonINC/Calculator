<Page x:Class="Calculator2.Views.Pages.ExpressionsCalculatingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Calculator2.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="266" 
      d:DesignWidth="383"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <Label Margin="6,0,10,0"
               VerticalAlignment="Center"
               Grid.Row="0" 
               Content="Введите числовое выражение для расчета:"/>

        <TextBox Grid.Row="1" Margin="10,10,10,10"/>

        <Button Grid.Row="3"
                Margin="270,0,10,0"
                VerticalAlignment="Center"
                Content="Вычислить"
                Command="{Binding Calculating}" 
                FontSize="12"/>
    </Grid>
</Page>
